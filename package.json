{
  "name": "specter",
  "version": "1.0.0",
  "description": "A truly transparent overlay video player for vision research compositing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "video-player",
    "transparent",
    "overlay",
    "compositing",
    "vision-research",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.research.specter",
    "productName": "Specter",
    "mac": { "target": "dmg" },
    "win": { "target": "portable" },
    "linux": { "target": "AppImage" }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0"
  }
}
